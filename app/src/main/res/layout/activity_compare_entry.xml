<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_compare_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.missionsv.android.seventhgear.compareEntry">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="Filter"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="Company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/textView20"
        android:textSize="21sp"
        android:textColor="@color/colorPrimaryDark" />

    <Spinner
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/company1"
        android:layout_width="180dp"
        android:clickable="false" />

    <Spinner
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/company1"
        android:layout_toEndOf="@+id/company1"
        android:layout_marginStart="17dp"
        android:id="@+id/company2"
        android:clickable="false" />

    <TextView
        android:text="Model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/textView22"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="21sp" />

    <Spinner
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/model1"
        android:layout_width="180dp"
        android:clickable="false" />

    <Spinner
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/model1"
        android:layout_toEndOf="@+id/model1"
        android:layout_marginStart="17dp"
        android:id="@+id/model2"
        android:clickable="false" />

    <TextView
        android:text="Variant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/model1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/textView23"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="21sp" />

    <Spinner
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/variant1"
        android:layout_width="180dp"
        android:clickable="false" />

    <Spinner
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/variant1"
        android:layout_toEndOf="@+id/variant1"
        android:layout_marginStart="17dp"
        android:id="@+id/variant2"
        android:clickable="false" />

    <Button
        android:text="Compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/btnCompare"
        android:layout_below="@+id/variant1"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:visibility="invisible" />


</RelativeLayout>
